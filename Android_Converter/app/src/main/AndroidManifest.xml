<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android_converter" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/convert"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/convert"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".area"
            android:screenOrientation="fullSensor"></activity>
        <activity android:name=".mass"
            android:screenOrientation="fullSensor"></activity>
        <activity android:name=".temp"
            android:screenOrientation="fullSensor"></activity>
        <activity android:name=".about"
            android:screenOrientation="fullSensor"></activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
