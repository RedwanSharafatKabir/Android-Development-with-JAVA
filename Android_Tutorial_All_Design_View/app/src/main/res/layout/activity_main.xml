<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#30b788"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#30b788"
        tools:context=".MainActivity">
        <TextView
            android:id="@+id/textviewID1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:padding="15dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="@string/title"
            />

        <CheckBox
            android:id="@+id/checkboxID1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text=" World of Warcraft"
            />

        <CheckBox
            android:id="@+id/checkboxID2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text=" Kunoichi The Broken Princess"
            />

        <CheckBox
            android:id="@+id/checkboxID3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text=" High School DXD"
            />

        <Button
            android:id="@+id/buttonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#D7E9D7"
            android:padding="15dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Play"
            />

        <TextView
            android:id="@+id/outputID2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/outputID3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <RadioGroup
            android:id="@+id/radiogrpID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radiobuttonID1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text=" Anime"
                />

            <RadioButton
                android:id="@+id/radiobuttonID2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text=" Hentai"
                />
        </RadioGroup>
        <Button
            android:id="@+id/buttonID2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#D7E9D7"
            android:padding="15dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Watch"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/page3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D7E9D7"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="3rd page"
                android:textAllCaps="false"
                />
            <Button
                android:id="@+id/page4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D7E9D7"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="4th page"
                android:textAllCaps="false"
                />
            <Button
                android:id="@+id/NextPageID1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D7E9D7"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Next"
                android:textAllCaps="false"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
